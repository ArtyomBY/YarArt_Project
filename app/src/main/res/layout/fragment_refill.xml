<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RefillFragment">

    <RelativeLayout
        android:id="@+id/relativeLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etBuyerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:hint="введите ID пользователя:" />

            <EditText
                android:inputType="number"
                android:id="@+id/etSumOfCashToRefill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:hint="введите сумму для зачисления:" />

            <Button
                android:id="@+id/buttonRefill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оплатить"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/green_app"/>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>